<Window x:Class="calculator.MemoryHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История памяти" MaxHeight="400" MaxWidth="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox ItemsSource="{Binding MemoryHistory}" FontSize="16" Margin="10"/>
        <Button Content="Закрыть" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" 
                Command="{Binding CloseCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Style="{StaticResource MaterialDesignFlatDarkButton}"/>
    </Grid>
</Window>